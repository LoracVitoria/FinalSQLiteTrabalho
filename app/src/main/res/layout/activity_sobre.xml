<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margem"
    android:orientation="vertical"
    tools:context=".activity.SobreActivity">

    <TextView
        android:id="@+id/txtNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nome_dev"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/txtProfissao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dev"
        android:textSize="20sp"
        android:layout_marginVertical="20dp"/>

    <ImageView
        android:id="@+id/imvDev"
        android:layout_width="wrap_content"
        android:layout_height="335dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="0dp"
        android:src="@drawable/img"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/txtCurso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/curso"
        android:gravity="end"
        android:layout_marginHorizontal="20dp"/>
    <TextView
        android:id="@+id/txtIdade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="@string/idade"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/txtSobre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sobre_app"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="42dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/txtVersion"
        android:text="@string/version"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">


        <TextView
            android:id="@+id/txtDireitos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/direitos" />

    </LinearLayout>




</LinearLayout>